MODULE main
VAR
  device1 : boolean;
  device2 : {off, low, medium, high};

ASSIGN
  init(device1) := FALSE;
  init(device2) := off;

TRANS
  next(device1) := 
    case
      device2 = high : TRUE;
      device2 = low : FALSE;
      TRUE : device1;
    esac;
  next(device2) := 
    case
      device1 : high;
      !device1 & device2 = off : low;
      TRUE : device2;
    esac;

LTLSPEC
  G (!(device1 & device2 != off))