MODULE main
VAR
  device1 : boolean;
  device2 : {off, low, medium, high};

ASSIGN
  init(device1) := FALSE;
  init(device2) := off;

TRANS
  next(device1) := 
    case
      device2 = off : TRUE;
      device2 = low : FALSE;
      device2 = medium : device1;
      device2 = high : !device1;
    esac;

LTLSPEC
  G(!(device1 & device2 != off))