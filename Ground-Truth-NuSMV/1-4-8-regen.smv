MODULE main
VAR
  device1 : boolean;
  device2 : {off, low, medium, high};

ASSIGN
  init(device1) := FALSE;
  init(device2) := off;

TRANS
  next(device1) := 
    case
    device1 : TRUE;
    !device1 : FALSE;
    TRUE : device1;
    esac;

  next(device2) := 
    case
    device2 = off : low;
    device2 = low : medium;
    device2 = medium : high;
    device2 = high : off;
    TRUE : device2;
    esac;

LTLSPEC
  G(!(device1 & device2 != off))